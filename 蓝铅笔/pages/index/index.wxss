/**index.wxss**/
/* 主体布局 */
.main-layout{
    width: 750rpx;
    /* height: 83vh; */
    background-color: rgb(244,244,244);
}
/* 轮播图 */
.rotation{
    width: 750rpx;
    height: 290rpx;
    background-color: #fff;
}
.rotation .rotation-swiper{
    width: 750rpx;
    height: 290rpx;
}
.rotation .rotation-swiper .rotation-img{
    width: 750rpx;
    height: 290rpx;
}
/* 大触直播 */
.box {
    background-color: #fff;
    margin-top: 20rpx;
  }
  
  .box-title {
    padding: 0 20rpx;
    box-sizing: border-box;
    height: 68rpx;
    line-height: 68rpx;
    display: flex;
    border: 1px solid #e6e6e6;
    justify-content: space-between;
  }
  .title-left {
    color: #222;
    font-size: 27rpx;
  }
  .title-right {
    font-size: 25rpx;
    color: #a4a4a4;
  }
  .live-list {
    width: 750rpx;
    padding: 30rpx;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
    align-items: stretch;
    justify-content: space-between;
  }
  .live-list-item {
    padding: 16rpx 20rpx 14rpx 20rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    border-radius: 8rpx;
    box-shadow:0 3rpx 8rpx rgba(0,0,0,.08);
    box-sizing: border-box;
  }
  .live-list-item.live {
    width: 100%;
  }
  .live-auther {
    margin-bottom: 12rpx;
    display: flex;
  }
  .live-auther .avat {
    width: 34rpx;
    height: 34rpx;
    overflow: hidden;
    border-radius: 50%;
  }
  .live-auther .auther {
    max-width: 234rpx;
    margin-left: 12rpx;
    font-size: 19.5rpx;
    line-height: 33.75rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }
  .live-title {
    height: 34rpx;
    margin-bottom: 14rpx;
  }
  .live-title .h4{
    font-size:25.5rpx;
    font-weight: 700;
    line-height: 34.5rpx;
    color: #222;
  }
  .live-cover {
    height: 366rpx;
    border-radius: 10rpx;
  }
  .live-cover .img {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
  }
  .live-date {
    margin-top: 15rpx;
    display: flex;
    justify-content: space-between;
  }
  .live-date .span {
    color: #a4a4a4;
    font-size:19.5rpx ;
    line-height: 30rpx;
  }
  .n2 {
    width: 335rpx;
    display: inline-block;
  }
  .n2 .live-cover {
    height: 220rpx;
  }
  .n2 .live-cover .img {
    width: 100%;
    height: 100%;
  }
  .n2 .live-title {
    height: 69.75rpx;
    margin-bottom: 14rpx;
    font-size: 28rpx;
  }
  .n2 .n2-date .span {
    display: block;
    color: #a4a4a4;
    font-size:19.5rpx ;
    line-height: 30rpx;
  }
  .n2 .n2-date .icon {
    font-size: 30rpx;
  }
  .n2 .n2-date .date {
    margin-top: 6rpx;
  }
  /* 热门教程 */
  /* 浮动 */
  .fl{
      float: left;
  }
  .fr{
      float: right;
  }
  .clearfix::after{
    content: "";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
  }
  .course{
      padding: 0 0 40rpx;
  }
  /* 超出隐藏 变成省略号 */
  /* .ellipsis{
      overflow: hidden;
      white-space: nowrap;
      text-overflow:ellipsis;
  } */
  .course-list{
    padding: 24rpx 12rpx 0;
  }
  .course-list .course-item{
      padding: 12rpx 12rpx 0;
      width: 340rpx;
      height:340rpx;
      /* border: 1px solid olivedrab; */
  }
  .course-list .course-item .course-img-box{
    width: 340rpx;
    height:270rpx;
  }
  .course-list .course-item .course-img-box .course-img{
    width: 100%;
    height:100%;
  }
  .course-list .course-item text{
      display: inline-block;
      width: 340rpx;
      height: 66rpx;
      line-height: 30rpx;
      font-size: 25rpx;
      text-align: justify;
      margin: 12rpx 0
  }
  /* 问答专区 */
  .queans-item{
      width: 685rpx;
      height: 500rpx;
      /* border: 1px solid orangered; */
      padding: 40rpx 32rpx;
      /* border-bottom: 1px solid black; */
  }
  .queans-item .user-info{
    /* position: relative; */
    display: flex;
  }
  .user-info image{
      width: 65rpx;
      height: 65rpx;
      border-radius: 50%;
      margin-right: 30rpx;
  }
  .user-info text{
    /* position: absolute; */
    margin-top: 16rpx;
  }
  .queans-content{
      padding: 20rpx 0;
  }
  .queans-content .qa-title{
      width: 610rpx;
      font-size: 35rpx;
      padding-left: 60rpx;
      position: relative;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
  }
  .queans-content .qa-title::before{
      content: "\95EE";
      display: inline-block;
      width: 45rpx;
      height:45rpx;
      text-align: center;
      background: linear-gradient(324deg,#008bff,#006bfe);
      color: white;
      opacity: 0.7;
      border-radius: 20%;
      font-size: 30rpx;
      position: absolute;
      left: 0;
  }
  .queans-content .qa-detail{
      padding-top: 20rpx;
      display: flex;
      justify-content: space-between;
  }
  .qa-detail .qa-content{
      display: inline-block;
      width: 530rpx;
      height: 130rpx;
      color: #5b6164;
      font-size: 30rpx;
  }
  .qa-detail .qa-cover{
      width: 130rpx;
      height: 130rpx;
      border-radius: 10%;
  }
  .queans-item .teacher-comment{
      padding: 28rpx 26rpx;
      background-color: #f7f7f7;
      border-radius: 10rpx;
  }
  .teacher-info .left{
      display: flex;
  }
  .teacher-info .t-avatar{
      width: 40rpx;
      height: 40rpx;
      border-radius: 50%;
      margin-right: 15rpx;
  }
  .teacher-info .t-nickname{
      display: inline-block;
      font-size: 30rpx;
      color: #3f4345;
  }
  .teacher-info .t-adopted_qa{
      display: inline-block;
      width: 110rpx;
      height: 40rpx;
      line-height: 40rpx;
      background: linear-gradient(90deg,#ffed70,#ffd865);
      border-radius: 20rpx;
      text-align: center;
      font-size: 23rpx;
      margin-left: 15rpx;
  }
  .teacher-comment .t-content{
      color: #5b6164;
      font-size: 28rpx;
      overflow: hidden;
      max-height: 80rpx;
      margin-top: 25rpx;
      line-height: 40rpx;
      position: relative;
  }
  .teacher-comment .t-content text{
    color: #457eec;
    position: absolute;
    right: 0;
    bottom: 0;
    background: #f7f7f7;
    z-index: 1;
    cursor: pointer;
    padding-left: 10rpx;
  }
